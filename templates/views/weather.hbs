<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{>navbar}}

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">

                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div>
                            <p class="humidity">Humidity:</p>
                            <p class="speed">Wind Speed:</p>
                    </div>
                </div>
            </div>
        </div>
    </div>



    {{>footer}}

    <script src="js/main.js">
    </script>
    <script>
        const getCurrentDay = ()=>{
            let weekDay = new Array(7)
            weekDay[0] = "Sunday"
            weekDay[1] = "Monday"
            weekDay[2] = "Tuesday"
            weekDay[3] = "Wednesday"
            weekDay[4] = "Thursday"
            weekDay[5] = "Friday"
            weekDay[6] = "Saturday"

            let currentTime = new Date()
            days = weekDay[currentTime.getDay()]
            let date = currentTime.getDate()
            let day = document.getElementById('day')
            let today_data = document.getElementById('today_data')
            day.innerText = days
            today_data.innerText = date

        }
        getCurrentDay()
    </script>
</body>